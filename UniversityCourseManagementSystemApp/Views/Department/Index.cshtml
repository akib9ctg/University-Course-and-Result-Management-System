@model UniversityCourseManagementSystemApp.Models.Department
@{
    ViewBag.Title = "Save Department";
}
    <div class="container sm100">
        <div class="row st_login_form">
            <div class="col-md-offset-3 col-md-6">
                <div class="addDepartment">
                    <h3>Save Department</h3>
                    @using (Html.BeginForm(null, null, FormMethod.Post))
                    {
                        @Html.LabelFor(x => x.DeptCode)<br />
                        @Html.TextBoxFor(x => x.DeptCode)<br/>
                        <span>@Html.ValidationMessageFor(x => x.DeptCode)</span><br />
                        @Html.LabelFor(x => x.DeptName)<br />
                        @Html.TextBoxFor(x => x.DeptName)<br />
                        <span>@Html.ValidationMessageFor(x => x.DeptName)</span><br />
                        <p align="center">
                            <button>Save</button>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
    @{
        if (@ViewData["Message"]!="")
        {
            <script language="javascript">
                alert('@ViewData["Message"]');
            </script>
        }
    }
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

