@model UniversityCourseManagementSystemApp.Models.Course
@{
    ViewBag.Title = "Save Course";
}
<div class="container sm100">
    <div class="row st_login_form">
        <div class="col-md-offset-3 col-md-6">
            <div class="addDepartment">
                <h3>Save Courses</h3>
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    @Html.LabelFor(x => x.CourseCode)<br />
                    @Html.TextBoxFor(x => x.CourseCode)<br />
                    <span>@Html.ValidationMessageFor(x => x.CourseCode)</span><br />
                    @Html.LabelFor(x => x.CourseName)<br />
                    @Html.TextBoxFor(x => x.CourseName)<br />
                    <span>@Html.ValidationMessageFor(x => x.CourseName)</span><br />
                    @Html.LabelFor(x => x.CourseCredit)<br />
                    @Html.TextBoxFor(x => x.CourseCredit)<br />
                    <span>@Html.ValidationMessageFor(x => x.CourseCredit)</span><br />

                    @Html.LabelFor(x => x.CourseDescription)<br />
                    @Html.TextAreaFor(x => x.CourseDescription)<br />

                    <table>
                        <tr>
                            <td align="right">
                                @Html.LabelFor(x => x.DepartmentId)
                            </td>
                            <td>
                                @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"))<br/>
                                <span>@Html.ValidationMessageFor(x => x.DepartmentId)</span><br/>
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                @Html.LabelFor(x => x.SemesterId)
                            </td>
                            <td>
                                @Html.DropDownListFor(x => x.SemesterId, new SelectList(ViewBag.Semesters, "Value", "Text"))<br />
                                <span>@Html.ValidationMessageFor(x => x.SemesterId)</span><br />
                            </td>
                        </tr>
                    </table>
                    <p align="center">
                        <button>Save</button>
                    </p>
                }
            </div>
        </div>
    </div>
</div>
@{
    if (@ViewData["Message"] != "")
    {
        <script language="javascript">
            alert('@ViewData["Message"]');
        </script>
    }
}
<script src="~/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

